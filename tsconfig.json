{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "lib/*": ["lib/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "test/**/*.ts",
    "test/**/*.svelte",
    "lib/**/*.ts",
    "lib/**/*.svelte"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
