{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "test/live/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],


  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "es2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom",
    ],
  }
}
