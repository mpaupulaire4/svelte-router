{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],


  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "es2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom",
    ],
    "types": ["jest", "svelte"]
  }
}
